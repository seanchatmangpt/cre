digraph "WCP-10: Arbitrary Cycles" {
    rankdir=TB;
    node [shape=circle, fixedsize=true, width=0.6];
    edge [fontsize=10];

    // Places
    p_start [label="p_start"];
    p_cond [label="p_cond"];
    p_body [label="p_body"];
    p_end [label="p_end"];

    // Transitions
    t_entry [shape=box, label="enter"];
    t_check [shape=box, label="condition"];
    t_do [shape=box, label="loop body"];
    t_exit [shape=box, label="exit"];

    // Arcs
    p_start -> t_entry;
    t_entry -> p_cond;
    p_cond -> t_check;
    t_check -> p_body [label="true"];
    t_body -> t_do;
    t_do -> p_cond [label="loop back"];
    t_check -> t_exit [label="false"];
    t_exit -> p_end;

    {rank=min; p_start};
    {rank=max; p_end};
}
